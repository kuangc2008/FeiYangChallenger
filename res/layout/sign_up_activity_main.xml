<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_head" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="账号"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/sign_up_usr_name_textView" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="@string/Login_usr_name"
            android:textSize="25sp"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:id="@+id/sign_up_usr_name_editText"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="密码"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/sign_up_password_textView" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="@string/Login_password"
            android:textSize="25sp"
            android:inputType="textPassword"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:id="@+id/sign_up_password_editText"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="确认密码"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/sign_up_password_again_textView" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:textSize="25sp"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:id="@+id/sign_up_password_again_editText"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="注册"
        android:textColor="@android:color/black"
        android:background="@android:color/darker_gray"
        android:id="@+id/sign_up_button"
        android:layout_gravity="center_horizontal" />


</LinearLayout>