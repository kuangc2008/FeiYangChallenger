<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:background="@drawable/contact_listitem"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_coming_game"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ico_game1"
        android:scaleType="fitXY"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_coming_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/iv_coming_game"
        android:singleLine="true"
        android:text="8.1开放内测"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_coming_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_coming_num"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_coming_num"
        android:text="|  23.45M"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_coming_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_coming_num"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/iv_coming_game"
        android:singleLine="true"
        android:text="@string/luandouxiyou"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_coming_remind"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/tv_coming_size"
        android:background="@drawable/simple_introduce_button_selector"
        android:focusable="false"
        android:gravity="center"
        android:singleLine="true"
        android:text="定时提醒"
        android:textColor="#ffffff"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv_coming_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_coming_game"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="乱斗西游"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>