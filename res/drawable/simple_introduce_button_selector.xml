<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"
        android:bottom="1dp" android:right="1dp" android:top="1dp" android:left="1dp">
            <shape>
                <gradient android:startColor="#2c93fc" android:centerColor="#2c93fc"
                    android:endColor="#2c93fc" android:type="linear" android:angle="90"
                    android:centerX="0.5" android:centerY="0.5" />

                <!--<padding android:left="2dp" android:top="2dp" android:right="2dp"-->
                    <!--android:bottom="2dp" />-->
                <!-- 应该是圆角 -->
                <corners android:radius="10dp" />
            </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#2484e5" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>