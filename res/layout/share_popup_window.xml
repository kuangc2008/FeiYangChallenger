<?xml version="1.0" encoding="utf-8"?>


<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/share_popup_tablelayout"
    android:background="#66000000"
    android:paddingTop="20dp"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    android:clickable="true">

    <TableRow
        android:paddingTop="20dp"
        android:background="@color/white">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/share_popup_weixin_friends_circle_imageView"
            android:src="@drawable/weixin_friend_circle"
            android:scaleType="fitCenter"
            android:clickable="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/share_popup_weixin_imageView"
            android:src="@drawable/weixin"
            android:clickable="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/share_popup_qq_imageView"
            android:src="@drawable/qq"
            android:clickable="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/share_popup_qq_zone_imageView"
            android:src="@drawable/qq_zone"
            android:clickable="true"/>
    </TableRow>

    <TableRow
        android:paddingTop="5dp"
        android:background="@color/white">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/share_popup_weixin_friends_circle_textView"
            android:layout_weight="1"
            android:text="微信朋友圈"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:gravity="center"

            android:singleLine="true"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/share_popup_weixin_textView"
            android:layout_weight="1"
            android:text="微信好友"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:singleLine="true"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/share_popup_QQ_textView"
            android:layout_weight="1"
            android:text="QQ好友"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:singleLine="true"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/share_popup_QQ_zone_textView"
            android:layout_weight="1"
            android:text="QQ空间"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:singleLine="true"/>
    </TableRow>

    <TableRow
        android:paddingTop="20dp"
        android:background="@color/white">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/share_popup_weibo_circle_imageView"
            android:src="@drawable/weibo"
            android:scaleType="fitCenter"
            android:clickable="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/share_popup_copy_links_imageView"
            android:src="@drawable/copy_links"
            android:clickable="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/share_popup_qr_code_imageView"
            android:src="@drawable/qr_code"
            android:clickable="true"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/share_popup_more_imageView"
            android:src="@drawable/more"
            android:clickable="true"/>
    </TableRow>

    <TableRow
        android:paddingTop="5dp"
        android:paddingBottom="20dp"
        android:background="@color/white">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/share_popup_weibo_textView"
            android:layout_weight="1"
            android:text="微博"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:singleLine="true"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/share_popup_copy_links_textView"
            android:layout_weight="1"
            android:text="复制链接"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:singleLine="true"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/share_popup_QR_code_textView"
            android:layout_weight="1"
            android:text="二维码"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:singleLine="true"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/share_popup_more_textView"
            android:layout_weight="1"
            android:text="更多"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:singleLine="true"/>
    </TableRow>

    <TableRow
        android:paddingTop="20dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/white"/>
    </TableRow>
</TableLayout>